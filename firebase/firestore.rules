rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(doc) {
      return isSignedIn() && request.auth.uid == doc.ownerId;
    }

    // Users collection: a user can read/update/delete their own doc, and create only their own id
    match /users/{userId} {
      allow get, list: if isSignedIn() && request.auth.uid == userId;
      // Enforce userId matches auth uid on create
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && request.auth.uid == userId;
    }

    // Dreams: only owners can read/write; enforce ownerId consistency on create
    match /dreams/{dreamId} {
      allow get, list: if isOwner(resource.data);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if isOwner(resource.data);
    }

    // Dream analyses: only owners can read/write; enforce ownerId and link to dream
    match /dream_analyses/{analysisId} {
      allow get, list: if isOwner(resource.data);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if isOwner(resource.data);
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
